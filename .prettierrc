{
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"arrowParens": "always",
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"printWidth": 80,
				"tabWidth": 4,
				"useTabs": false,
				"singleQuote": false,
				"bracketSpacing": false,
				"explicitTypes": "always"
			}
		}
	]
}
